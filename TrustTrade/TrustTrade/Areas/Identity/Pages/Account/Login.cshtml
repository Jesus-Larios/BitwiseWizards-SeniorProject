@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <style>
        .login-container {
            max-width: 500px; 
            z-index: 100;
            margin: 0 auto;
            padding-top: 50px; 
            padding-bottom: 20px; /
            padding-left: 20px; 
            padding-right: 20px; 
        }
        .login-container .container-content {
            background-color: #3a3a3aa2;
            color: inherit;
            padding: 40px 25px 40px 25px; /* Increased padding */
            border-color: #FFEB3B;
            border-style: solid solid none;
            border-width: 1px 0;
        }
        .logo-badge {
            color: #e6e6e6;
            font-size: 80px;
            font-weight: 800;
            letter-spacing: -10px;
            margin-bottom: 0;
        }
        /* Form Controls */
        .form-control,
        .border-line {
            background-color: #5f5f5f;
            border: 1px solid #424242;
            border-radius: 1px;
            color: inherit;
            display: block;
            padding: 6px 12px;
            width: 100%;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
        .form-control:focus,
        .border-line:focus {
            border-color: #FFEB3B;
            background-color: #616161;
            color: #e6e6e6;
        }
        .form-control, .form-control:focus {
            box-shadow: none;
        }
        .form-control::-webkit-input-placeholder { color: #BDBDBD; }
        /* Button Styling */
        .form-button {
            background-color: rgba(255, 235, 59, 0.24);
            border-color: rgba(255, 235, 59, 0.24);
            color: #e6e6e6;
            border-radius: 3px;
            width: 100%;
        }
        .form-button:hover,
        .form-button:focus,
        .form-button:active {
            background-color: rgba(255, 235, 59, 0.473);
            border-color: rgba(255, 235, 59, 0.473);
        }
        /* Utility Classes */
        .text-c { text-align: center; }
        .text-whitesmoke { color: whitesmoke; }
        .text-darkyellow { color: rgba(255, 235, 59, 0.432); }
        .margin-t { margin-top: 15px; }
        .margin-b { margin-bottom: 15px; }

        img {
            width: 125px;
            height: 100px;
        }
    </style>
</head>
<body>
    <div class="login-container text-c">
        <div>
            <h1 class="logo-badge text-whitesmoke">
                <img src="/icons/Auth.png" alt="User Icon" />
            </h1>
        </div>
        <p>Log-in</p>
        <div class="container-content">
            <form id="account" method="post" class="margin-t">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                
                <!-- Email Field -->
                <div class="form-floating margin-t">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="form-floating margin-t">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="checkbox margin-t">
                    <label asp-for="Input.RememberMe" class="form-label text-whitesmoke">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <!-- Submit Button -->
                <button id="login-submit" type="submit" class="form-button margin-b">
                    Log in
                </button>

                <!-- Additional Links -->
                <div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-darkyellow">
                        <small>Forgot your password?</small>
                    </a>
                    <p class="text-whitesmoke text-c"><small>Do not have an account?</small></p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-darkyellow">
                        <small>Register as a new user</small>
                    </a>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-darkyellow">
                            <small>Resend email confirmation</small>
                        </a>
                    </p>
                </div>
            </form>
            <p class="margin-t text-whitesmoke"><small>TrustTrade</small></p>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>